---
layout: base.njk
title: "Posts"
---

<h1 class="post-title">Posts</h1>

{% set list = collections.postsPublishedSorted or collections.postsSorted %}
{% if list and list.length %}
  <div class="post-grid">
    {% for post in list %}
      <article class="card">
        <a href="{{ post.url }}">
          {% if post.data.cover or post.data.hero %}
            <div class="card__media">
              <img
                src="{{ post.data.cover or post.data.hero }}"
                alt="{{ post.data.coverAlt or post.data.heroAlt or post.data.title }}"
                loading="lazy" decoding="async">
            </div>
          {% endif %}
          <div class="card__body">
            <h2 class="card__title">{{ post.data.title }}</h2>
            <p class="card__meta">
              <time datetime="{{ post.date | dateIso }}">{{ post.date | dateDisplay }}</time>
              {% if post.data.byline or post.data.author %} Â· {{ post.data.byline or post.data.author }}{% endif %}
            </p>
          </div>
        </a>
      </article>
    {% endfor %}
  </div>
{% else %}
  <p>No posts yet.</p>
{% endif %}
