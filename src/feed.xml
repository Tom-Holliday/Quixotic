---
permalink: feed.xml
eleventyExcludeFromCollections: true
---
{% set posts = collections.postsSorted | slice(0, 25) %}
{% set siteUrl = metadata.url %}
{% set feedTitle = metadata.title %}
{% set feedDesc = metadata.description %}

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ feedTitle }}</title>
    <link>{{ siteUrl }}/</link>
    <description>{{ feedDesc }}</description>
    <atom:link href="{{ siteUrl }}/feed.xml" rel="self" type="application/rss+xml"/>
    {% for post in posts %}
      <item>
        <title>{{ post.data.title }}</title>
        <link>{{ siteUrl }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ siteUrl }}{{ post.url }}</guid>
        <pubDate>{{ post.date | rssDate }}</pubDate>
        <description><![CDATA[{{ post.templateContent | safe }}]]></description>
      </item>
    {% endfor %}
  </channel>
</rss>