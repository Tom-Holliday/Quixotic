---
permalink: /posts/
layout: base.njk
title: Posts
eleventyExcludeFromCollections: true
---

<main class="home container">
  <h1 class="page-title">Posts</h1>

  {% set posts = collections.postsPublishedSorted or [] %}

  {% if posts | length == 0 %}
    <p class="muted">No posts yet. Use <code>/admin</code> to publish your first one.</p>
  {% else %}
    <section class="card-grid">
      {% for p in posts %}
        <article class="card">
          <a href="{{ p.url }}">
            {% set coverSrc = p.data.cover or p.data.hero %}
            {% if coverSrc %}
              <figure class="card__media">
                <img src="{{ coverSrc }}" alt="{{ p.data.coverAlt or p.data.title }}" loading="lazy" decoding="async">
              </figure>
            {% endif %}
            <div class="card__body">
              <h2 class="card__title">{{ p.data.title }}</h2>
              <p class="card__meta">
                {{ p.date | date("dd LLL yyyy") }}
                · {{ (p.templateContent or '') | readingTime }}
                {% if p.data.byline or p.data.author %} · {{ p.data.byline or p.data.author }}{% endif %}
              </p>
            </div>
          </a>
        </article>
      {% endfor %}
    </section>
  {% endif %}
</main>

