---
layout: base.njk
---
<article class="post">
  <h1>{{ title }}</h1>

  <p class="meta">
    <time datetime="{{ page.date | dateIso }}">{{ page.date | dateDisplay }}</time>
  </p>

  <div class="content">
    {{ content | safe }}
  </div>

  {% if tags and tags.length %}
    <p class="meta">Tags:
      {% for t in tags %}
        <a href="/tag/{{ t | url }}/">{{ t }}</a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}

  <hr>
  {% include "partials/giscus.njk" %}
</article>
