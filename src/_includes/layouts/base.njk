<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{% if title %}{{ title }} Â· {% endif %}{{ metadata.title or 'Site' }}</title>

  {# Early theme bootstrap: set data-theme before CSS paints #}
  <script>
    (function () {
      try {
        var saved = localStorage.getItem('theme');
        if (saved === 'light' || saved === 'dark') {
          document.documentElement.setAttribute('data-theme', saved);
        } else {
          var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          // Your design uses a white UI when "dark" is active in tokens.
          // If user prefers dark, keep your default "dark" token set; else flip to light.
          document.documentElement.setAttribute('data-theme', prefersDark ? 'dark' : 'light');
        }
      } catch (e) {}
    })();
  </script>

  <link rel="stylesheet" href="/assets/css/main.css?v={{ '/assets/css/main.css' | assetHash }}">
  {% if headExtra %}{{ headExtra | safe }}{% endif %}
</head>

<body class="{{ bodyClass }}">
  {% include "components/header.njk" %}

  <main id="main-content" class="container">
    {% block content %}{% endblock %}
  </main>

  {% include "components/footer.njk" ignore missing %}

  <script src="/assets/js/theme.js?v={{ '/assets/js/theme.js' | assetHash }}" defer></script>
</body>
</html>


