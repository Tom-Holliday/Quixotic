{# components/hero.njk — single centered featured post (no card image) #}
{% set heroImg = page.heroImage or metadata.heroImage or "/img/logo.png" %}
{% set list = collections.postsPublishedSorted or collections.postsSorted %}
{% set p1 = (list or [])[0] %}

<section class="hero hero--quixote">

  <div class="hero__media" aria-hidden="true">
    <img
      class="hero__img"
      src="{{ heroImg | url }}?v={{ heroImg | assetHash }}"
      alt=""
      role="presentation"
      loading="eager"
      decoding="async" />
  </div>

  <div class="hero__shade" aria-hidden="true"></div>

  {% if p1 %}
    <div class="hero__inner hero__inner--centered">
      <article class="card card--hero card--hero-featured">
        <a href="{{ p1.url }}">

          <div class="card__body">
            <span class="card__eyebrow">Featured</span>

            <h2 class="card__title">
              {{ p1.data.title }}
            </h2>

            <p class="card__meta">
              <time datetime="{{ p1.date | dateIso }}">
                {{ p1.date | dateDisplay }}
              </time>
              · {{ p1.data.byline or p1.data.author or "Tom Holliday" }}
            </p>
          </div>

        </a>
      </article>
    </div>
  {% endif %}

</section>
